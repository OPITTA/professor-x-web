#set($top_menu="computer")
#set($side_bar="computer")
#set($tab_bar="list")
#parse("shared/header.vm")
#parse("shared/top_menu.vm")
#parse("shared/computer_side_bar.vm")
#parse("shared/computer_tab_bar.vm")
<div class="row-fluid">
#if($computers && $computers.size()>0)
<table class="table">
  <thead>
    <tr>
        <th>ID</th>
        <th>标签</th>
        <th>CPU</th>
        <th>内存</th>
        <th>磁盘</th>
        <th>固盘</th>
        <th>网卡</th>
        <th>创建时间</th>
    </tr>
  </thead>
  <tbody>
    #set($i=1)
    #foreach($computer in $computers)
    <tr>
        <td>$i</td>
        <td>$!computer.describe</td>
        <td>
            #if($!computer.cpuId < 1)
                <a href="/professor_x_web/computer/edit/$computer.id/$!CPU.id">设置</a>
            #else
                <a>查看</a>
            #end
        </td>
        <td>
            #if($!computer.memId < 1)
                <a href="/professor_x_web/computer/edit/$computer.id/$!MEMORY.id">设置</a>
            #else
                <a>查看</a>
            #end
        </td>
        <td>
            #if($!computer.distId < 1)
                <a href="/professor_x_web/computer/edit/$computer.id/$!DIST.id">设置</a>
            #else
                <a>查看</a>
            #end
        </td>
        <td>
            #if($!computer.solidDistId < 1)
                <a href="/professor_x_web/computer/edit/$computer.id/$!SOLID_DIST.id">设置</a>
            #else
                <a>查看</a>
            #end
        </td>
        <td>
            #if($!computer.networkCardId < 1)
                <a href="/professor_x_web/computer/edit/$computer.id/$!NERWORK_CARD.id">设置</a>
            #else
                <a>查看</a>
            #end
        </td>
        <td>$!DateUtil.formatForDate1($!computer.createTime)</td>
    </tr>
    #set($i = $i + 1)
    #end
  </tbody>
</table>
#else
<div class="hero-unit">
    <h2>去添加宝贝吧!</h2>
</div>
#end
</div>
#parse("shared/footer.vm")